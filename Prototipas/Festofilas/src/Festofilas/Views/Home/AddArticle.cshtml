@model Festofilas.Models.MainViewModels.ArticleViewModel

@{
    ViewData["Title"] = "AddArticle";
}

<h2>Pridėti straipsnį</h2>

<form asp-action="AddArticle" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label">Pavadinimas</label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Summary" class="col-md-2 control-label">Santrauka</label>
            <div class="col-md-10">
                <textarea asp-for="Summary" class="form-control"></textarea>
                <span asp-validation-for="Summary" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Text" class="col-md-2 control-label">Tekstas</label>
            <div class="col-md-10">
                <textarea asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="SubmissionTime" class="col-md-2 control-label">Data</label>
            <div class="col-md-10">
                <input asp-for="SubmissionTime" class="form-control" />
                <span asp-validation-for="SubmissionTime" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Image" class="col-md-2 control-label">Paveikslėlis</label>
            <div class="col-md-10">
                <input type="file" name="Image" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Multiselect</label>
            <div class="col-sm-10">
                <select asp-for="FestivalNames" asp-items="ViewBag.Festivals" multiple="multiple" class="form-control" >
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Atgal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
